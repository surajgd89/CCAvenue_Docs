body {
    background-color: #f0f0f0;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}
/* Styling the header */
header {
    background-color: #4caf50;
    color: white;
    padding: 20px;
    text-align: center;
}
/* Styling paragraphs */
p {
    font-size: 16px;
    color: #333;
    line-height: 1.6;
    margin: 20px;
}
/* Styling a button */
button {
    background-color: #008cba;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}
